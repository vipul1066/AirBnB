<% layout("/layouts/boilerplate") %>

    <div class="row">
    <div class="col-6 offset-3">
        <br>
    <h3>Create a New Listings</h3>
    <form method="POST" action="/listings" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
        <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control" required></textarea>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control" required>
        </div>
        
        <div class="row">
        <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
        </div>
        
        <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter country name" type="text" class="form-control" required>
        </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter your location" type="text" class="form-control" required>
        </div>
        
        <br>
        <button class="btn btn-dark">Submit</button>
        <br>
    </form>
    <br><br><br>
    </div>
    </div>
